
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constarint_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="COST"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/constarint_container" />

            <TextView
                android:id="@+id/entry_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3c6e71"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/constarint_container"
                tools:text="ENTRY TIME" />

            <TextView
                android:id="@+id/exit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/constarint_container"
                app:layout_constraintTop_toBottomOf="@id/entry_time"
                tools:text="EXIT TIME" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
